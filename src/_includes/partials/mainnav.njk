{% for item in mainnav %}
  {% if loop.first %}<ul class="c-mainnav">{% endif %}
    <li class="c-mainnav__item">
      <a class="c-mainnav__link  {{ 'is-active' if navSection == item.navTrigger }}" href="{{ item.navUrl }}">{{ item.navLabel }}</a>
    </li>
  {% if loop.last %}</ul>{% endif %}
{% endfor %}